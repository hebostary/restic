    "version": "0.2.0",
    "configurations": [
        {
            "name": "restic backup",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "asRoot": true,
            "console": "integratedTerminal",
            "dlvFlags": ["--check-go-version=false"],
            "program": "/home/dev/workspace/github/restic/restic/restic",
            //"program": "/home/dev/workspace/restic",
            "args": [
                "--repo",
                "/home/dev/restic/repo1",
                "--verbose",
                "backup",
                "/home/dev/tmp"
            ],
            "preLaunchTask": "go: build restic(debug)",
        }
    ]
